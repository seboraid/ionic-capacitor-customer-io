{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "dom.iterable", "es2015"],
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "outDir": "dist/esm",
    "declarationDir": "dist/esm",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.e2e.ts"]
}